<!-- Welcome section starts -->
<section class="welcome">
	<div class="container">
		<div class="welcome-outter">
			{% if section.settings.title != blank and section.settings.showTitle %}
				<h2 class="home-section--title">
					{{ section.settings.title | escape }}
				</h2>
			{% endif %}
		</div>
	</div>
</section>

<!-- Schema -->
{% schema %}
{
	"name": "Grid Advanced",
	"settings": [
		{
			"type": "checkbox",
			"id": "showTitle",
			"label": "Show Title",
			"default": false
		},
		{
			"type": "text",
			"id": "title",
			"label": "Heading",
		}
	],
	"presets": [
		{
			"name": "Advanced Grid",
			"category": "ADVANCED LAYOUT"
		}
	]
}
{% endschema %}

